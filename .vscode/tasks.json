{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev:build",
      "type": "npm",
      "script": "dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gulp-tsc"
      ]
    },
    {
      "label": "watch",
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "dev:start",
      "dependsOn": "dev:build",
      "type": "shell",
      "command": "nodemon",
      "args": [
        "-w",
        "${workspaceRoot}/app",
        "-i",
        "${workspaceRoot}/app/public"
      ],
      "options": {
        "env": {
          "NODE_ENV": "development",
          "PORT": "3000"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "prod:build",
      "type": "npm",
      "script": "build",
      "problemMatcher": []
    },
    {
      "label": "prod:start",
      "dependsOn": "prod:build",
      "type": "shell",
      "isBackground": true,
      "command": "yarn",
      "args": [
        "start"
      ],
      "problemMatcher": []
    },
    {
      "label": "deploy",
      "type": "shell",
      "command": "ansible-playbook",
      "args": [
        "-i",
        "deploy/hosts",
        "playbook.yml"
      ],
      "problemMatcher": []
    }
  ]
}