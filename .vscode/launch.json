{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client",
      "sourceMaps": true
    },
    {
      "name": "Launch",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/app/bin/www.js",
      "cwd": "${workspaceRoot}/",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--nolazy",
        "--harmony",
        "-w",
        "${workspaceRoot}/app",
        "-i",
        "${workspaceRoot}/app/public"
      ],
      "restart": true,
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      },
      "smartStep": true,
      "skipFiles": ["node_modules/**"],
      "preLaunchTask": "dev:build",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/app/**/*.js"]
    }
  ]
}
