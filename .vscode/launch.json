{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/app/bin/www.js",
      "stopOnEntry": false,
      "cwd": "${workspaceRoot}/",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--nolazy",
        "--harmony",
        "-w",
        "${workspaceRoot}/app",
        "-i",
        "${workspaceRoot}/app/public",
      ],
      "restart": true,
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/app/**/*.js"
      ]
    },
    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "remoteRoot": "/usr/src/app",
      "localRoot": "${workspaceRoot}"
    }
  ]
}